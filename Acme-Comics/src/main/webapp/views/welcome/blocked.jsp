<p><spring:message code="welcome.blocked.prefix" /> ${user.userAccount.username} <spring:message code="welcome.blocked.suffix" /></p>

<c:if test="${user.blockReason == null}">
<p><spring:message code="welcome.blocked.noReason" />
</c:if>
<c:if test="${user.blockReason != null}">
<p><spring:message code="welcome.blocked.reasonPrefix" /> ${user.blockReason}
</c:if>