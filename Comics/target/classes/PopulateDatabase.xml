<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
	">
	
	
	
	
	<!-- Comics --><!-- A PARTIR DE AQUI, ATRÃS NI CASO -->
	
	<bean id="comic1" class="domain.Comic">
		<property name="name" value="Flashpoint"/>
		<property name="publisher" ref="publisher1"/>
		<property name="author" ref="author1"/>
		<property name="image" value="http://localhost:8080/Comics/images/flashpoint.png"/>
		<property name="description" value="Great Comic"/>
		<property name="comicComicCharacter">
			<list>
				<ref bean="comicComicCharacter1"/>
				<ref bean="comicComicCharacter2"/>
			</list>
		</property>
		<property name="userComic">
			<list>
				<ref bean="userComic1"/>
			</list>
		</property>
		<property name="tags">
			<list>
				<value>Action</value>
			</list>
		</property>
	</bean>
	
	<!-- publisher -->
	
	<bean id="publisher1" class="domain.Publisher">
		<property name="name" value="DC"/>
		<property name="foundation" value="01/01/1934"/>
		<property name="description" value="publishingCompany fundada en 1934 por Malcolm Wheeler-Nicholson"/>
		<property name="image" value="http://localhost:8080/Comics/images/dclogo.png"/>
		<property name="comics">
			<list>
				<ref bean="comic1"/>
			</list>
		</property>
		<property name="comments">
			<list>
				<value>This is lit</value>
				<value>I hate this</value>
			</list>
		</property>
	</bean>
	<!-- characters -->
	
	<bean id="ComicCharacter1" class="domain.ComicCharacter">
		<property name="name" value="Bruce Wayne"/>
		<property name="alias" value="Batman"/>
		<property name="city" value="Gotham"/>
		<property name="firstAppearance" value="Batman 1"/>
		<property name="image" value="http://localhost:8080/Comics/images/batman.png"/>
		<property name="description" value="The Batman"/>
		<property name="comicComicCharacter">
			<list>
				<ref bean="comicComicCharacter1"/>
			</list>
		</property>
	</bean>
	
	
	<!-- Autores -->
	
	<bean id="author1" class="domain.Author">
		<property name="name" value="Geoff Johns"/>
		<property name="birthDate" value="25/01/1973"/>
		<property name="birthPlace" value="Detroit, Michigan, Estados Unidos"/>
		<property name="image" value="http://localhost:8080/Comics/images/geoffjohns.png"/>
		<property name="description" value="Great Author"/>
		<property name="comics">
			<list>
				<ref bean="comic1"/>
			</list>
		</property>
	</bean>
	
	<bean id="comicComicCharacter1" class="domain.ComicComicCharacter">
			<property name="role" value="Geoff Johns"/>
			<property name="comicCharacter" ref="comicCharacter1"/>
			<property name="comic" ref="comic1"/>
	
	</bean>
	
	
</beans>